extends shared/_master

block body
     each post in posts        
        .container
            |pruc            
            .well
                .media
                    a.pull-left(href='#')
                        img.media-object(src=''+ post.img).postImg
                    |   &#x9;&#x9;
                    .media-body
                        -var title = post.title
                        -var titleCount = title.length
                        -var substrTitle = title.substr(0,63) 
                        if titleCount > 63
                            h4.media-heading=substrTitle.toUpperCase() + '...'
                        else    
                            h4.media-heading=substrTitle.toUpperCase()
                        |
                        p.text-right by 
                            -var user = post.username
                            =user.toUpperCase()
                        |           
                        p=post.content        
                -var comment = post.comments
                ul.list-inline.list-unstyled
                  li
                    span
                      i.glyphicon.glyphicon-calendar
