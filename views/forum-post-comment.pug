include comment.pug

mixin comment(c)
    .media
        div.comment-avatar.pull-left
            img.media-object.user-avatar(src='https://k60.kn3.net/taringa/1/5/8/6/7/6/50/leonrival/200x150_75E.jpg')
            |
            .media-body
                div.comment-box
                    div.comment-content
                        =c.content
                        div.comment-footer
                            i.icon-user
                            |  by 
                            a(href='#') 
                            =post.username
                            |  
                            i.glyphicon.glyphicon-calendar
                            |  July 7th, 2017
                            | 
                            i.glyphicon.glyphicon-comment
                            | 
                            =post.comments.length
                    +newComment
                    .row
                        ul.comments-list.reply-list
                            each nestedComment in c.comments
                                li
                                    +comment(nestedComment)