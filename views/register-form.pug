extends shared/_master
block scripts
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.3/js/bootstrapValidator.min.js')

block body
  .container
    form#contact_form.well.form-horizontal(action='', method='post')
      fieldset
        // Form Name
        legend
          center
            h2
              b Registration Form
        br
        // Text input
        .form-group
          label.col-md-4.control-label First Name
          .col-md-4.inputGroupContainer
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-user
              input.form-control(name='first_name', placeholder='First Name', type='text')
        // Text input
        .form-group
          label.col-md-4.control-label Last Name
          .col-md-4.inputGroupContainer
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-user
              input.form-control(name='last_name', placeholder='Last Name', type='text')
        .form-group
          label.col-md-4.control-label Country
          .col-md-4.selectContainer
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-list
              select.form-control.selectpicker(name='country')
                option(value='') Country
                option Bulgaria
        // Text input
        .form-group
          label.col-md-4.control-label Username
          .col-md-4.inputGroupContainer
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-user
              input.form-control(name='user_name', placeholder='Username', type='text')
        // Text input
        .form-group
          label.col-md-4.control-label Password
          .col-md-4.inputGroupContainer
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-user
              input.form-control(name='user_password', placeholder='Password', type='password')
        // Text input
        .form-group
          label.col-md-4.control-label Confirm Password
          .col-md-4.inputGroupContainer
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-user
              input.form-control(name='confirm_password', placeholder='Confirm Password', type='password')
        // Text input
        .form-group
          label.col-md-4.control-label E-Mail
          .col-md-4.inputGroupContainer
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-envelope
              input.form-control(name='email', placeholder='E-Mail Address', type='text')
        // Text input
        .form-group
          label.col-md-4.control-label Contact No.
          .col-md-4.inputGroupContainer
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-earphone
              input.form-control(name='contact_no', placeholder='(+359)', type='text')
        // Button
        .form-group
          label.col-md-4.control-label
          .col-md-4
            button.btn.btn-warning(type='submit')
              |SUBMIT 
              span.glyphicon.glyphicon-send
  script(src='/static/js/register-form-validator.js')